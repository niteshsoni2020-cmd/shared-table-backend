# Core
NODE_ENV=production
PORT=4000
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>
JWT_SECRET=replace_with_long_random_secret
PUBLIC_URL=https://api.example.com

# Frontend/CORS
FRONTEND_BASE_URL=https://app.example.com
CORS_ORIGINS=https://app.example.com,https://www.app.example.com

# Stripe
STRIPE_SECRET_KEY=sk_live_replace
STRIPE_WEBHOOK_SECRET=whsec_replace

# Cloudinary
CLOUDINARY_CLOUD_NAME=replace
CLOUDINARY_API_KEY=replace
CLOUDINARY_API_SECRET=replace

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=mailer@example.com
SMTP_PASS=replace
FROM_EMAIL=no-reply@example.com
ADMIN_EMAIL=admin@example.com
SUPPORT_EMAIL=support@example.com

# Jobs
RUN_JOBS=true
INTERNAL_JOBS_TOKEN=replace_with_long_random_token

# Seed-only (never for normal runtime)
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_NAME=Super Admin
SEED_ADMIN_PASSWORD=replace_with_strong_password
